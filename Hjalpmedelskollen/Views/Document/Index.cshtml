@model Hjalpmedelskollen.ViewModels.DocumentViewModel;

@{
	ViewData["Title"] = "Dokument";
}

<div id="document-container">
	<div id="document-aside">
		<h2>Mappar</h2>
		@foreach (var folder in Model.Folders)
		{
			<h3 class="doc-folder"><i class="fa-solid fa-folder" data-folder-id="@folder.Id"></i>@folder.Name</h3>
		}
	</div>
	<div id="document-displayer">
		<h2>Dokument</h2>
		<div>
			<h3>Manualer</h3>
			<ul>
				<li class="small-li"><i class="fa-solid fa-file-pdf"></i>Rullstol Cross 6</li>
				<li class="small-li"><i class="fa-solid fa-file-pdf"></i>Lyftsele Liko</li>
				<li class="small-li"><i class="fa-solid fa-file-pdf"></i>Mobil golvlyft Uno</li>
				<li class="small-li"><i class="fa-solid fa-file-pdf"></i>Lyftsele Guldmann</li>
				<li class="small-li"><i class="fa-solid fa-file-pdf"></i>Komfortrullstol Azalea</li>
				<li class="small-li"><i class="fa-solid fa-file-pdf"></i>Dyna ROHO</li>
				<li class="small-li"><i class="fa-solid fa-file-pdf"></i>Mobil hygienstol Swift</li>
			</ul>
		</div>
	</div>
</div>